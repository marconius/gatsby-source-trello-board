{
  "extends": [
    "airbnb-base"
  ],
  "overrides": [
    {
      "files": [
          "./test/**/*_test.js"
      ],
      "env": {
          "mocha": true
      },
      "plugins": ["mocha"],
      "rules": {
          "mocha/no-exclusive-tests": "error",
          "mocha/no-pending-tests": "error"
      }
    }
  ]
}